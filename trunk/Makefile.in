USE_EXTENSION_MANIFEST = 1

PREF_JS_EXPORTS = $(srcdir)/defaults/preferences/growl-prefs.js

DIST_FILES = \
  install.rdf \
  license.txt \
  $(NULL)

include $(topsrcdir)/config/rules.mk
