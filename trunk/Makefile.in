DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = growl

DIRS = public src

XPI_NAME 							 = growl
INSTALL_EXTENSION_ID   = growl@growl.info
